<?xml version="1.0" encoding="UTF-8"?>
<evaml
  name="teste"
  xsi:noNamespaceSchemaLocation="xml_schema/evaml_schema.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <settings>
    <voice tone="en-US_EmmaExpressive" />
    <lightEffects mode="ON" />
    <audioEffects mode="ON" />
  </settings>
  <script>
    <light id="LOOP1" state="ON" color="RED"/>
    <led animation="HAPPY" />
    <useMacro macro="M1" />
    <evaEmotion emotion="ANGRY" />
    <useMacro macro="M2" />
    <listen language="pt-BR"/>
    <goto target="LOOP1" />
  </script>
  <macros>
    <macro id="M1">
      <audio source="efx-blin" block="TRUE" />
      <counter var="VAR" op="=" value="2" />
    </macro>
    <macro id="M2">
      <led animation="SAD" />
      <counter var="VAR2" op="=" value="3" />
    </macro>
  </macros>
</evaml>